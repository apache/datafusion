                           (arrow_cast('Raphael', 'Utf8View'), arrow_cast('R', 'Utf8View')),
                           (arrow_cast(NULL, 'Utf8View'), arrow_cast('R', 'Utf8View'));

query B
select arrow_cast('NULL', 'Utf8View') = arrow_cast('Andrew', 'Utf8View');
