# date + time → timestamp
# Add a time-of-day to a date
# date '2001-09-28' + time '03:00' → 2001-09-28 03:00:00

query P
SELECT '2001-09-28'::date + '03:00'::time
----
2001-09-28T03:00:00

query P
SELECT '03:00'::time + '2001-09-28'::date
----
2001-09-28T03:00:00

query T
SELECT arrow_typeof('2001-09-28'::date + '03:00'::time)
----
Timestamp(ns)

query P
SELECT '2001-09-28'::date - '03:00'::time
----
2001-09-27T21:00:00

