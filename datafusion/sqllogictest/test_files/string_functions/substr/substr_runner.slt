# and repeat tests in `substr_table.slt.part`
# --------------------------------------
statement ok
create table test_substr_base (
    col1 VARCHAR
) as values ('foo'), ('helloüåè‰∏ñÁïå'), ('üí©'), ('ThisIsAVeryLongASCIIString'), (''), (NULL);

#
# Run1: Utf8
