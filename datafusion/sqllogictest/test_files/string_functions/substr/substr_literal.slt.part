# Nulls
query TTTTTTTTTT
SELECT 
  substr('alphabet', NULL),
  substr(NULL, 1),
  substr(NULL, NULL),
  substr('alphabet', CAST(NULL AS int), -20),
  substr('alphabet', 3, CAST(NULL AS int)),
  substr(NULL, 3, -4),
  substr(NULL, NULL, 4),
  substr(NULL, 1, NULL),
  substr('', NULL, NULL),
  substr(NULL, NULL, NULL);
----
NULL NULL NULL NULL NULL NULL NULL NULL NULL NULL

