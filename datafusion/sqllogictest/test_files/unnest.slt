## Unnest multiple expressions in from clause
query ITII
select * from unnest(
    [1,2],
    arrow_cast(['a','b', 'c'], 'LargeList(Utf8)'),
    arrow_cast([4, NULL], 'FixedSizeList(2, Int64)'),
    NULL::int[]
) as t(a, b, c, d);
----
1 a 4 NULL
2 b NULL NULL
NULL c NULL NULL

query ?I
select * from unnest([], NULL::int[]);
----


