# Import common test data
include ../init_data.slt.part

# ----------------------------------------------------------------------
# Anchor tests (start ^ and end $)
# ----------------------------------------------------------------------

# Test 1: Start anchor (^) should only match the very first row of the input
#         that also satisfies the DEFINE predicate.
query TDI
SELECT * FROM stock_price
MATCH_RECOGNIZE (
    ALL ROWS PER MATCH
    PATTERN (^ A)
    DEFINE A AS price < 130
)
----
DDOG 2024-01-01 125

# Test 2: End anchor ($) should only match when the predicate row is the
#         last row of the input.
query TDI
SELECT * FROM stock_price
MATCH_RECOGNIZE (
    ALL ROWS PER MATCH
    PATTERN (A $)
    DEFINE A AS company = 'CRM' AND price = 266
)
----
CRM 2024-01-12 266

# Test 3: Combination of start and end anchors that cannot be satisfied
#         (there is more than one row in the input), so it should return no rows.
query TDI
SELECT * FROM stock_price
MATCH_RECOGNIZE (
    ALL ROWS PER MATCH
    PATTERN (^ A $)
    DEFINE A AS price < 130
)
----
