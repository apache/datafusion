# Import common test data
include ../init_data.slt.part

# Test 1: Basic permutation pattern PERMUTE(A, B, C)
query TDI
SELECT * FROM stock_price
MATCH_RECOGNIZE (
    PARTITION BY company
    ORDER BY price_date
    ALL ROWS PER MATCH
    PATTERN (PERMUTE(A, B, C))
    DEFINE
        A AS price < 130,
        B AS price > 130,
        C AS price == 132
)
----
DDOG 2024-01-03 132
DDOG 2024-01-04 129
DDOG 2024-01-05 135

# Test 2: PERMUTE with duplicate symbols
query TDI
SELECT * FROM stock_price
MATCH_RECOGNIZE (
    PARTITION BY company
    ORDER BY price_date
    ALL ROWS PER MATCH
    PATTERN (PERMUTE(A, A, B) | PERMUTE(A, B, B))
    DEFINE
        A AS price < 130,
        B AS price > 130
)
----
DDOG 2024-01-01 125
DDOG 2024-01-02 128
DDOG 2024-01-03 132
DDOG 2024-01-04 129
DDOG 2024-01-05 135
DDOG 2024-01-08 138

# Test 3: PERMUTE with five symbols (A, B, C, D, E)
query TDIT
SELECT * FROM stock_price
MATCH_RECOGNIZE (
    PARTITION BY company
    ORDER BY price_date
    MEASURES
        classifier() AS class
    ALL ROWS PER MATCH
    PATTERN (PERMUTE(A, B, C, D, E))
    DEFINE
        A AS price == 129,
        B AS price == 135,
        C AS price == 138,
        D AS price == 139,
        E AS price == 141
)
----
DDOG 2024-01-04 129 A
DDOG 2024-01-05 135 B
DDOG 2024-01-08 138 C
DDOG 2024-01-09 141 E
DDOG 2024-01-10 139 D

# Test 4: PERMUTE with five symbols (A, B, C, D, E) in a different order
query TDIT
SELECT * FROM stock_price
MATCH_RECOGNIZE (
    PARTITION BY company
    ORDER BY price_date
    MEASURES
        classifier() AS class
    ALL ROWS PER MATCH
    PATTERN (PERMUTE(A, B, C, D, E))
    DEFINE
        A AS price == 139,
        B AS price == 138,
        C AS price == 135,
        D AS price == 141,
        E AS price == 129
)
----
DDOG 2024-01-04 129 E
DDOG 2024-01-05 135 C
DDOG 2024-01-08 138 B
DDOG 2024-01-09 141 D
DDOG 2024-01-10 139 A
