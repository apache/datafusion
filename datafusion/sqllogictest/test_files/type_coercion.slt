# union_with_multiply_cols()
query TT
EXPLAIN SELECT 'a' a, 1 b UNION ALL SELECT 1.1 a, 1.1 b
----
logical_plan
01)Union
02)--Projection: Utf8("a") AS a, CAST(Int64(1) AS Float64) AS b
