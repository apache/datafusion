    SELECT id, name FROM t1
    EXCEPT
    SELECT id, name FROM t2
)
UNION ALL
(
    SELECT id, name FROM t2
    EXCEPT
    SELECT id, name FROM t1
)
----
logical_plan
Union
--LeftAnti Join: t1.id = CAST(t2.id AS Int32), t1.name = t2.name
