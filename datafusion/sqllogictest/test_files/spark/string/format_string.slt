# ================================
# Advanced error cases
# ================================

## Invalid flag combination (+ and space)
statement error
SELECT format_string('%+ d', 42);

## Invalid flag combination (+ and space)
statement error
SELECT format_string('% +d', 42);

## Invalid flag combination (- and 0)
statement error
SELECT format_string('%-0d', 42);

## Width without value for line separator
statement error
SELECT format_string('%5n');

