query ?
SELECT map(1.0, '2', 3.0, '4');
----
{1.0: 2, 3.0: 4}

query ?
SELECT map('a', 1, 'b', 2);
----
{a: 1, b: 2}

query ?
SELECT map(TRUE, 'yes', FALSE, 'no');
----
{true: yes, false: no}


statement error DataFusion error: Execution error: map requires an even number of arguments
SELECT map(1, 'a', 2);

statement error DataFusion error: Execution error: map requires an even number of arguments
SELECT map('key_only');


statement error DataFusion error: Execution error: map requires all value types to be the same
SELECT map('inner', map('a', 1), 'b', 2);


query ?
SELECT map('', 'empty', 'non-empty', 'val');
----
{: empty, non-empty: val}
